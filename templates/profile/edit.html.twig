{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/edit_profile.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid vh-100 d-flex flex-column justify-content-center align-items-center">
        <h1 class="text-danger mb-4">Edit Profile</h1>

        <div class="card p-4 shadow-lg w-100" style="max-width: 800px;">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label no-wrap'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(form.age, 'Age', {'label_attr': {'class': 'form-label no-wrap'}}) }}
                        {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.age) }}
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(form.gender, 'Gender', {'label_attr': {'class': 'form-label no-wrap'}}) }}
                        {{ form_widget(form.gender, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.gender) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label no-wrap'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(form.imagePath, 'Profile Image', {'label_attr': {'class': 'form-label no-wrap'}}) }}
                        {{ form_widget(form.imagePath, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.imagePath) }}
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(form.password, 'Password', {'label_attr': {'class': 'form-label no-wrap'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password) }}
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4 gap-2">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary action-button'}}) }}
                <button type="button" class="btn btn-secondary action-button" onclick="window.location.href='{{ path('app_profile') }}'">Cancel</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}