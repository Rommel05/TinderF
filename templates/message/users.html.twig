{% extends 'base.html.twig' %}

{% block title %}Match{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style-users.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid p-0 vh-100 d-flex">
        <nav>
            <ul id="sideNav" class="side-nav">
                <li><a href="{{ path('app_tinder') }}">Tinder</a></li>
                <li><a href="{{ path('app_profile') }}">Profile</a></li>
                <li><a href="{{ path('app_match') }}">Match</a></li>
                <li><a href="{{ path('app_likes') }}">Likes</a></li>
                <li><a href="{{ path('app_users') }}" class="active">Messages</a></li>
                <li><a href="{{ path('app_logout') }}">Logout</a></li>
            </ul>
        </nav>

        <main class="main-content flex-grow-1">
            <div class="user-list">
                {% if pairs is not empty %}
                    {% for pair in pairs %}
                        <div class="user-item">
                            <img src="{{ asset('images/' ~ pair.userB.imagePath) }}" alt="Profile Image">
                            <a href="{{ path('app_message', { id: pair.userB.id }) }}">{{ pair.userB.name }}</a>
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="text-center">There are no users</p>
                {% endif %}
            </div>
        </main>
    </div>
{% endblock %}