{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style-form.css') }}">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}

{% block body %}
    {% if error %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                Swal.fire({
                    title: 'Authentication error',
                    text: "{{ error.messageKey|trans(error.messageData, 'security') }}",
                    icon: 'error',
                    confirmButtonText: 'Accept'
                });
            });
        </script>
    {% endif %}
    <div id="content" class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="login-container p-4 rounded shadow-lg bg-white">
            <header class="mb-4">
                <h1 class="display-4 text-center">Login</h1>
            </header>

            <main>
                <form action="{{ path('login') }}" method="post" id="form">
                    <div class="mb-3">
                        <label for="username" class="texto form-label">Email</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="texto form-label">Password</label>
                        <input type="password" id="password" name="_password" class="form-control" required>
                    </div>

                    <button type="submit" id="boton" class="btn btn-lg w-100">Login</button>
                </form>
            </main>
        </div>
    </div>
{% endblock %}